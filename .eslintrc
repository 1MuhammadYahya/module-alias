root: true

env:
  node: true

extends:
  "eslint:recommended"

rules:
  indent: [2, 2, {SwitchCase: 1}]
  block-spacing: 2
  brace-style: [0, "1tbs"]
  camelcase: [0, { properties: "never" }]
  callback-return: [0, ["cb", "callback", "next"]]
  comma-dangle: [0, "never"]
  comma-spacing: 2
  comma-style: [2, "last"]
  consistent-return: 0
  curly: [0, "all"]
  default-case: 0
  dot-notation: [2, { allowKeywords: true }]
  eol-last: 2
  eqeqeq: 2
  func-style: [0, "declaration"]
  guard-for-in: 0
  key-spacing: [0, { beforeColon: false, afterColon: true }]
  max-len: [2, 80, 2]
  new-cap: 2
  new-parens: 2
  no-alert: 2
  no-array-constructor: 2
  no-caller: 2
  no-console: 2
  no-delete-var: 2
  no-empty: 2
  no-empty-label: 2
  no-eval: 2
  no-extend-native: 2
  no-extra-bind: 2
  no-extra-semi: 2
  no-fallthrough: 0
  no-floating-decimal: 2
  no-implied-eval: 2
  no-invalid-this: 0
  no-iterator: 2
  no-label-var: 2
  no-labels: 0
  no-lone-blocks: 0
  no-loop-func: 2
  no-mixed-spaces-and-tabs: [2, false]
  no-multi-spaces: 0
  no-multi-str: 2
  no-native-reassign: 2
  no-nested-ternary: 2
  no-new: 2
  no-new-func: 2
  no-new-object: 2
  no-new-wrappers: 2
  no-octal: 2
  no-octal-escape: 2
  no-process-exit: 2
  no-proto: 2
  no-redeclare: 2
  no-return-assign: 0
  no-script-url: 2
  no-sequences: 2
  no-shadow: 2
  no-shadow-restricted-names: 2
  no-spaced-func: 2
  no-trailing-spaces: 2
  no-undef: 2
  no-undef-init: 2
  no-undefined: 0
  no-underscore-dangle: 0
  no-unused-expressions: 2
  no-unused-vars: [2, {vars: "all", args: "none"}]
  no-use-before-define: 0
  no-unreachable: 2
  no-useless-concat: 2
  no-with: 2
  object-shorthand: 0
  quotes: [2, "single"]
  radix: 2
  require-jsdoc: 0
  semi: 0
  semi-spacing: [2, {before: false, after: true}]
  space-after-keywords: [2, "always"]
  space-before-blocks: 2
  space-before-function-paren: [2, "never"]
  space-infix-ops: 2
  space-return-throw-case: 2
  space-unary-ops: [2, {words: true, nonwords: false}]
  spaced-comment: [2, "always", { exceptions: ["-"]}]
  strict: [0, "global"]
  valid-jsdoc: [0]
  wrap-iife: 0
  yoda: [2, "never"]

  # Previously on by default in node environment
  no-catch-shadow: 0
  no-console: 2
  no-mixed-requires: 2
  no-new-require: 2
  no-path-concat: 0
  no-process-exit: 2
  global-strict: [0, "always"]
  handle-callback-err: [2, "err"]
